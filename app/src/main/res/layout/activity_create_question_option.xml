<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextOptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option text" />

    <EditText
        android:id="@+id/editTextOptionOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option order"
        android:inputType="number"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/buttonSaveOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Option"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonCancelOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="8dp" />
</LinearLayout>
